{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch AutoMarket PWA",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "userDataDir": false,
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor"
            ]
        },
        {
            "name": "Launch PWA in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "https://auto-market.pro",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true
        }
    ]
}