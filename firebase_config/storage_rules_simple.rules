rules_version = '2';

// 游뚿 REGLAS TEMPORALES DE STORAGE - MUY PERMISIVAS PARA TESTING

service firebase.storage {
  match /b/{bucket}/o {
    
    // TEMPORAL: Permite leer todas las im치genes (para mostrar en app)
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // TEMPORAL: Permite escribir si est치 autenticado
    match /vehicles/{vehicleId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // TEMPORAL: Permite escribir fotos de perfil
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}

